    <input type="text" id="mioinput1">
    <button id="miobottone1" onclick="aprifinestra()">Niccolò</button>
    <button id="miobottone2" onclick="aprifinestra2()">Ragazzi</button>
    <button id="miobottone3" onclick="aprifinestra3()">, buona giornata</button>
    <div>
        <p id="out1">Risultato:</p>
    </div>
    <script>
        function aprifinestra(){
            let i = document.getElementById("mioinput1").value;
            alert("Niccolò " + i);
            document.getElementById("out1").innerHTML += i;
        }
            function aprifinestra2(){
            let i = document.getElementById("mioinput1").value;
            alert("Ragazzi " + i);
            document.getElementById("out1").innerHTML += i;
        }
            function aprifinestra3(){
            let i = document.getElementById("mioinput1").value;
            alert(", buona giornata " + i);
            document.getElementById("out1").innerHTML += i;
        }
